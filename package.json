{
  "name": "docz-stater",
  "version": "1.0.0",
  "description": "A stater for docz project",
  "main": "src/index.js",
  "scripts": {
    "prepush": "npm test",
    "precommit": "npm test",
    "lint": "./node_modules/.bin/eslint src/**/*.js --ext md .",
    "pretest": "./node_modules/.bin/eslint --fix --ignore-path .gitignore .",
    "test": "./node_modules/.bin/jest --coverage test/**/*.test.js"
  },
  "keywords": [
    "documentation",
    "docz-starter",
    "docz",
    "starter"
  ],
  "author": "Joydip Roy (rjoydip) <joydipand@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "docz": "^0.2.6",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "jest": {
    "transform": {}
  }
}
